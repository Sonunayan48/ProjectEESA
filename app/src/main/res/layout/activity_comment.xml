<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Posts.CommentActivity">


    <TextView
        android:id="@+id/text"
        style="@style/general_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Comments"
        android:textSize="22dp"
        android:textStyle="bold"
        />





            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_weight="7"
                android:layout_above="@+id/write_comment"
                tools:listitem="@layout/comment_item_view"
                android:layout_margin="18dp"
                android:paddingBottom="6dp"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />


        <EditText
            android:id="@+id/write_comment"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"
            android:hint="write comment"
            android:padding="14dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/postCmt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/postCmt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comments_list"
        android:layout_alignStart="@+id/write_comment"
        android:layout_centerVertical="true"
        android:layout_marginStart="288dp"
        android:layout_marginBottom="16dp"
        android:elevation="32dp"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</RelativeLayout>